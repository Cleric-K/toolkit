<?xml version="1.0" encoding="UTF-8" ?>

<project name="github" description="Contains phing targets for github." default="">

    <target name="github-auth" description="Authenticate on GitHub.">
        <if>
            <or>
                <equals arg1="${github.auth}" arg2="http-toekn" />
                <equals arg1="${github.auth}" arg2="http-toekn" />
            </or>
            <then>
                <phingcall target="github-init-token" />
                <phingcall target="github-init-team" />
            </then>
            <elseif>
                <equals arg1="${github.auth}" arg2="password" />
                <then>
                    <phingcall target="github-init-user" />
                    <phingcall target="github-init-pass" />
                </then>
            </elseif>
        </if>
    </target>

    <target name="github-create-release" description="Create release on GitHub."
        depends="
            github-auth,
            github-init">
        <gh-create-release
            tagName="${github-tag-name}"
            commitish="${github-tag-hash}"
            releaseId="release" />
    </target>

    <target name="github-create-release-assets" description="Upload release assets to github."
        depends="
            github-auth,
            github-init,
            github-create-release">
        <gh-create-assets releaseId="${release}">
            <fileset dir=".">
                <include name="${project.id}.tar.gz" />
            </fileset>
        </gh-create-assets>
    </target>

    <target name="github-init" description="Initialize credentials and target."
        depends="
            github-init-owner,
            github-init-repo" />

    <target name="github-init-owner" description="Ask for repository owner if not set." hidden="true" unless="github.owner">
        <input message="Enter owner of the repository." propertyName="github.owner" />
    </target>

    <target name="github-init-pass" description="Ask for password if not set." hidden="true" unless="github.pass">
        <input message="Enter your GitHub password." propertyName="github.pass" hidden="true" />
    </target>

    <target name="github-init-repo"  description="Ask for repository name if not set." hidden="true" unless="github.repo">
        <input message="Enter name of the repository."  propertyName="github.repo" />
    </target>

    <target name="github-init-team" description="Ask for team id if not set." hidden="true" unless="github.team">
        <input message="Enter your GitHub team."  propertyName="github.team" />
    </target>

    <target name="github-init-token" description="Ask for token if not set." hidden="true" unless="github.token">
        <input message="Enter your GitHub token." propertyName="github.token" hidden="true" />
    </target>

    <target name="github-init-user" description="Ask for username if not set." hidden="true" unless="github.user">
        <input message="Enter your GitHub username."  propertyName="github.user" />
    </target>

    <target name="github-contributor-list" description="List collaborators of the github repository">
        <if>
            <available file="${subsite.resources.repository.collaborators}" type="file" property="repo.name" />
            <then>
                <repositorycollaborators
                        repoOwner="${repo.owner}"
                        repoOwnerPass="${repo..pass}"
                        repoName="${repo.name}"
                />
            </then>
            <else>
                <echo message="No repository defined, please review your configuration." />
            </else>
        </if>
    </target>

    <target name="github-contributor-add" description="Add collaborator to github repository">
        <if>
            <available file="${subsite.resources.repository.collaborators}" type="file" property="github.users" />
            <then>
                <if>
                    <available file="build.properties" type="file" property="project.reference.repository" />
                    <then>
                        <repositorycollaborators
                                repoOwner="${repo.owner}"
                                repoOwnerPass="${repo.owner.pass}"
                                repoName="${repo.name}"
                                repoUsers="${repo.collaborators}"
                                op="add"
                        />
                    </then>
                    <else>
                        <echo message="No repository defined, please review your configuration." />
                    </else>
                </if>
            </then>
            <else>
                <echo message="No users available, skipping target." />
            </else>
        </if>
    </target>

    <target name="github-contributor-remove" description="Remove collaborator from github repository">
        <if>
            <available file="${subsite.resources.repository.collaborators}" type="file" property="github.users" />
            <then>
                <repositorycollaborators
                        repoOwner="${repo.owner}"
                        repoOwnerPass="${repo.owner.pass}"
                        repoName="${repo.name}"
                        repoUsers="${repo.collaborators}"
                        op="remove"
                />
            </then>
            <else>
                <echo message="No users available, removing all users ;)..... or not!" />
            </else>
        </if>
    </target>

</project>
